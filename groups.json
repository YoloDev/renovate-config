{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "datasources": ["npm"],
      "groupName": "unified packages",
      "packagePatterns": [
        "^unified$",
        "^unist-",
        "^hast-",
        "^rehype-",
        "^remark-",
        "^hastscript$"
      ]
    },
    {
      "datasources": ["npm"],
      "groupName": "octokit packages",
      "packagePatterns": ["^@octokit\\/"]
    },
    {
      "datasources": ["npm"],
      "groupName": "github actions packages",
      "packagePatterns": ["^@actions\\/"]
    },
    {
      "datasources": ["nuget"],
      "groupName": "FsCheck packages",
      "packagePatterns": ["^FsCheck$", "^FsCheck\\.Xunit$"]
    },
    {
      "datasources": ["crate"],
      "groupName": "tracing crates",
      "packagePatterns": ["^tracing$", "^tracing-subscriber$"]
    },
    {
      "datasources": ["crate"],
      "groupName": "sea-orm crates",
      "packagePatterns": ["^sea-orm$", "^sea-orm-migration$"]
    }
  ]
}
