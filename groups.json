{
  "packageRules": [
    {
      "datasources": ["npm"],
      "groupName": "unified packages",
      "packagePatterns": [
        "^unified$",
        "^unist-",
        "^hast-",
        "^rehype-",
        "^remark-",
        "^hastscript$"
      ]
    },
    {
      "datasources": ["npm"],
      "groupName": "octokit packages",
      "packagePatterns": ["^@octokit\\/"]
    },
    {
      "datasources": ["npm"],
      "groupName": "github actions packages",
      "packagePatterns": ["^@actions\\/"]
    }
  ]
}
